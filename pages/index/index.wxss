/**index.wxss**/
page{
  background-color: #F0F0F0;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

swiper{
  width: 750rpx;
  height: 320rpx;
}
swiper-item image{
  width: 100%;
  height: 100%;
}
.title{
  height: 82rpx;
  line-height: 82rpx;
  font-size: 28rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  font-weight: 700;
}
.item{
  margin: 20rpx 0;
}
.item image{
  width: 750rpx;
  height: 320rpx;
  display: block;
}
.infos{
  width: 750rpx;
  height: 180rpx;
  position: relative;
  background-color: #fff;
}
.item .infos .name{
  box-sizing: border-box;
  padding: 16rpx 124rpx 92rpx 30rpx;
  color: #3C3C3C;
  font-size: 30rpx;
}
.item .infos .price{
  position: absolute;
  top: 16rpx;
  right: 30rpx;
  color: #FE6249;
  font-size: 30rpx;
}
.item .infos .time{
  position: absolute;
  bottom:20rpx;
  left: 32rpx;
  color: #B4B4B4;
  font-size: 22rpx;
}